<!-- Update business conatact view -->

<%- include('../partials/header.ejs') -%>
<%- include('../partials/main_nav.ejs') -%>
  
<!-- Content for the add page-->
<main class="container">
  <h1 class="text-center mt-5"><%= title %></h1>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <form method="POST" class="form">

        <div class="form-group">
          <label for="contactNameTextFeild">Name</label>
          <input type="text" class="form-control" 
          id="contactNameTextFeild" 
          placeholder="Enter the contact name"
          value="<%= contact.contact_name %>"
          name="contact_name" required>
        </div>

        <div class="form-group">
          <label for="contactNumberTextFeild">Phone number</label>
          <input type="text" class="form-control" 
          id="contactNumberTextFeild" 
          placeholder="Enter the contact number"
          value="<%= contact.contact_number %>"
          name="contact_number" required>
        </div>

        <div class="form-group">
          <label for="eamilTextFeild">Email</label>
          <input type="text" class="form-control" 
          id="emailTextFeild" 
          placeholder="Enter the email address"
          value="<%= contact.email_address %>"
          name="email_address" required>
        </div>
        
        <!-- Button to update contact-->
        <button class="btn btn-primary mr-2">
          <i class="fas fa-edit"></i>
          Update
        </button>

        <!-- Button to delete contact-->
        <a href="/business-contacts/delete/<%=contact._id%>" class="btn btn-danger mr-2" id="updatePageDeleteButton">
          <i class="fas fa-trash-alt"></i>
          Delete
        </a>

        <!-- Cancel button-->
        <a href="/business-contacts" class="btn btn-warning mr-2">
          <i class="fas fa-undo"></i>
          cancel
        </a>
        
      </form>
    
    </div>
  </div>
</main>

<%- include('../partials/bottom_nav.ejs') -%>
<%- include('../partials/footer.ejs') -%>